" key remap
inoremap <C-F> <Right>
inoremap <C-B> <Left>


"----------------------------
" win32
if has('win32')
	if has('gui_running')
		" GUI
		set guioptions-=m
		set guioptions-=T
		set columns=181		" ウィンドウの幅
		set lines=41		" ウィンドウの高さ
		winpos 54 135		" ウィンドウの位置
	endif
endif

